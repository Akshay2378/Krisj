<% include partials/header.ejs %>
<div class="container">

    <% if (person) { %>
        <form class="add-person-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" value="<%= person.name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="age">Age</label>
                    <input type="number" class="form-control" name="age" id="age" value="<%= person.age %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="gender">Gender</label>
                    <input type="text" class="form-control" name="gender" id="gender" value="<%= person.gender %>" required>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="phno">Phone Number</label>
                    <input type="number" class="form-control" name="phno" id="phno" value="<%= person.phno %>" required>
                </div>

            </div>
            <button type="submit" class="btn btn-success float-right">Update Person</button>
        </form>
    <% } else { %>
        <p class="text-center">Person Not Found. Go <a href="/add">here</a> to add person.</p>
    <% } %>
</div>
</div>
</body>
</html>
