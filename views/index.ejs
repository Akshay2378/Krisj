<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (person.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Mobile Number</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% person.forEach((person, index) => { %>
                        <tr>
                          <!--  <th scope="row"><%= person.phno %></th>
-->                            
                            <td><%= person.name %></td>
                            <td><%= person.age %></td>
                            <td><%= person.gender %></td>
                            <td><%= person.phno %></td>

                            <td>
                                <a href="/edit/<%= person.phno %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= person.phno %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No person found. Go <a href="/add" >here</a> to add person.</p>
        <% } %>
    </div>
</div>
</body>
</html>
